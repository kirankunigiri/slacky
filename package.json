{
	"name": "Slacky",
	"description": "A better Slack experience on the web",
	"version": "1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare",
		"sync-env": "doppler -p slacky -c dev secrets download --no-file --format env | tee .env > /dev/null",
		"test": "playwright test --trace on",
		"test:fast": "SKIP_BUILD=1 SKIP_AUTH=1 playwright test --trace on",
		"setup-test:build": "SKIP_AUTH=1 playwright test --project=setup --headed",
		"setup-test:auth-password": "SKIP_BUILD=1 AUTH_METHOD=password playwright test --project=setup --headed",
		"setup-test:auth-magic-link": "SKIP_BUILD=1 AUTH_METHOD=magic-link playwright test --project=setup"
	},
	"dependencies": {
		"@legendapp/state": "^3.0.0-beta.42",
		"@mantine/core": "^8.3.10",
		"@mantine/hooks": "^8.3.10",
		"@mantine/modals": "^8.3.10",
		"@t3-oss/env-core": "^0.13.10",
		"@tabler/icons-react": "^3.36.0",
		"@tailwindcss/vite": "^4.1.18",
		"@webext-core/messaging": "^2.3.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.561.0",
		"motion": "^12.23.26",
		"photoswipe": "^5.4.4",
		"playwright-extra": "^4.3.6",
		"posthog-js": "^1.310.0",
		"puppeteer-extra-plugin-stealth": "^2.11.2",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-photoswipe-gallery": "^4.0.0",
		"react-scan": "^0.4.3",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18",
		"uuid": "^13.0.0",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@babel/preset-react": "^7.28.5",
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.57.0",
		"@react-dev-inspector/babel-plugin": "^2.0.1",
		"@react-dev-inspector/vite-plugin": "^2.0.1",
		"@stylistic/eslint-plugin": "^5.6.1",
		"@types/node": "^25.0.3",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"@typescript-eslint/parser": "^8.50.0",
		"@wxt-dev/auto-icons": "^1.1.0",
		"@wxt-dev/module-react": "^1.1.5",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.1",
		"eslint-plugin-better-tailwindcss": "^3.8.0",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-tailwindcss": "^3.18.2",
		"globals": "^16.5.0",
		"playwright-ctrf-json-reporter": "^0.0.27",
		"postcss": "^8.5.6",
		"postcss-preset-mantine": "^1.18.0",
		"postcss-simple-vars": "^7.0.1",
		"react-dev-inspector": "^2.1.0-beta.10",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
